<%= form_for(@article) do |f| %>
    <p class='col-md-12'>
      <%=f.label :title, class:'control-label' %>
      <%=f.text_field :title, class: 'form-control width-controls' %>
    </p>
    <p class='col-md-12'>
      <%=f.label :text, class:'control-label' %>
      <%=f.text_area :text, class: 'form-control width-controls height-controls' %>
    </p>
    <p class='col-sm-offset-6'>
      <%= f.submit 'Confirm changes', class: 'btn btn-large btn-primary' %>
    </p>
<% end%>
<% if @article.errors.any? %>
    <ul class="Signup_Errors">
      <% for message_error in @user.errors.full_messages %>
          <li>* <%= message_error %></li>
      <% end %>
    </ul>
<% end %>