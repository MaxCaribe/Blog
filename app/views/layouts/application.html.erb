<!DOCTYPE html>
<html>
<head>
  <title>Blog</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<header>
  <div class="navbar navbar-fixed-top">
    <div class="container">
      <div class="navbar-header">
              <%=link_to 'My blog', root_path, class: 'navbar-brand'%>
    </div>
      <div class="navbar-collapse collapse">
        <ul class="navbar-nav navbar-right">

          <% if current_user  %>
              <li>
                <%= link_to 'Sign out', signout_path, method: 'delete', class: 'navbar-brand' %>
              </li>
          <% else %>
              <li>
                <%= link_to 'Sign up', signup_path, class: 'navbar-brand' %>
              </li>
              <li>
              <%= link_to 'Sign in', signin_path, class: 'navbar-brand' %>
              </li>

          <% end %>
        </ul>
      </div>
    </div>
  </div>
</header>
<hr/>
<div class="container body-content row">
  <div class="col-md-3">
    <% if current_user %>
        <%= render 'images/show' %>
        <%= button_to 'New articles', new_article_path, :method => :get, class:'btn btn-xs btn-primary' %>
        <%= button_to 'New image', new_image_path, :method => :get, class: 'btn btn-xs btn-primary' %>
    <%end%>
  </div>
  <div class="col-md-9">
  <%= yield %>
    </div>
</div>


</body>
</html>
